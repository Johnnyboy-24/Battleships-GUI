            <Label Grid.Column="6" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">6</Label>
            <Label Grid.Column="7" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">7</Label>
            <Label Grid.Column="8" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">8</Label>
            <Label Grid.Column="9" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">9</Label>
            <Label Grid.Column="10" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">10</Label>
            <Label Grid.Column="0" Grid.Row="1" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >A</Label>
            <Label Grid.Column="0" Grid.Row="2" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >B</Label>
            <Label Grid.Column="0" Grid.Row="3" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >C</Label>
            <Label Grid.Column="0" Grid.Row="4" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >D</Label>
            <Label Grid.Column="0" Grid.Row="5" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >E</Label>
            <Label Grid.Column="0" Grid.Row="6" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >F</Label>
            <Label Grid.Column="0" Grid.Row="7" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >G</Label>
            <Label Grid.Column="0" Grid.Row="8" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >H</Label>
            <Label Grid.Column="0" Grid.Row="9" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >I</Label>
            <Label Grid.Column="0" Grid.Row="10" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" >J</Label>


        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" x:Name="field_1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="1" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">1</Label>
            <Label Grid.Column="2" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">2</Label>
            <Label Grid.Column="3" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">3</Label>
            <Label Grid.Column="4" Grid.Row="0" FontSize="15" HorizontalAlignment="Center"  FontStyle="Normal">4</Label>
